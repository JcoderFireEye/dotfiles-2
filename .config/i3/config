# Background Wallpaper
#exec_always --no-startup-id xsetroot -solid "#FFFFFF"
#exec xsetroot -solid "#111111"
exec_always feh --bg-max -Z /home/bandithijo/Pictures/Wallpaper/archWallpaper/Arch-Wallpaper-11.png

# i3lock lockscreen
bindsym $mod+Shift+x exec --no-startup-id i3lock -u --beep --color 000000 -i /home/bandithijo/Pictures/Wallpaper/archWallpaper/Arch-Wallpaper-11L.png
exec_always killall xautolock ; xautolock -time 15 -locker "i3lock -u --beep --color 000000 -i /home/bandithijo/Pictures/Wallpaper/archWallpaper/Arch-Wallpaper-11L.png" && systemctl suspend

set $Locker i3lock -u --beep --color 000000 -i /home/bandithijo/Pictures/Wallpaper/archWallpaper/Arch-Wallpaper-11L.png && systemctl suspend

set $mode_system System (x) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym x exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_system"

