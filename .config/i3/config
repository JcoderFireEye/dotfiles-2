# Background Wallpaper
exec_always feh --bg-max -Z /home/bandithijo/pix/Wallpapers/archWallpaper/Arch-Wallpaper-11.png

# i3lock lockscreen
bindsym $mod+Shift+x exec --no-startup-id i3lock -u --beep --color 000000 -t -i /home/bandithijo/pix/Wallpapers/archWallpaper/Arch-Wallpaper-11L.png

exec_always killall xautolock ; xautolock -time 15 -locker "i3lock -u --beep --color 000000 -i /home/bandithijo/pix/Wallpapers/archWallpaper/Arch-Wallpaper-11L.png" && systemctl suspend

set $Locker i3lock -u --beep --color 000000 -i /home/bandithijo/pix/Wallpaper/archWallpaper/Arch-Wallpaper-11L.png && systemctl suspend

set $mode_system System [X] lock, [E] logout, [S] suspend, [H] hibernate, [R] reboot, [Shift+S] shutdown
mode "$mode_system" {
  bindsym x exec --no-startup-id $Locker, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_system"

# Gnome Screenshot
bindsym $mod+Print exec gnome-screenshot -i

