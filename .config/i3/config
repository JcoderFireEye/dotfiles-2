# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Start i3bar to display a workspace bar (plus the system information bumblebee-status
# finds out, if available)

set $bg-color 	      		#002B36
set $border-color			    #002B36
set $inactive-bg-color   	#002B36
set $text-color          	#E4E4E4
set $inactive-text-color  #576D74
set $urgent-bg-color      #859900
set $urgent-text-color		#E4E4E4

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color			      $bg-color          $text-color          #ffaf00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #ffaf00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #ffaf00
client.urgent           $urgent-bg-color    $urgent-bg-color   $urgent-text-color   #ffaf00

# Hiding edge border indicator
hide_edge_borders both

# Window Border Settings
bindsym $mod+t border normal 0
bindsym $mod+Shift+t border normal 1
bindsym $mod+y border none
bindsym $mod+Shift+y border pixel 1
new_window pixel 1
new_float pixel 1

# i3bar Toggle between dock mode and hide mode
bindsym $mod+F11 bar mode toggle

bar {
  id bar-1
  tray_output primary
  position top
  # Bumblebee-Status on GitHub https://github.com/tobi-wan-kenobi/bumblebee-status
  status_command ~/.config/bumblebee-status/bumblebee-status -m title brightness pasink pasource nic memory sensors battery1 battery0 date profile -p date.format="0%w%y%m%d%H%M" -t gruvbox-powerline-bandit-solarized
  font pango:hack 9
  bindsym button1 nop

  colors {
    background  #002B36
    separator   #E4E4E4
    statusline  #E4E4E4

    #		              	  border                background         	text
    focused_workspace  		$text-color  				  #002B36             $text-color
    active_workspace      #829395               #002B36             $text-color
    inactive_workspace 		#41565D				 	      #002B36				      $text-color
    urgent_workspace   		$urgent-bg-color      $urgent-bg-color    $text-color
    #binding_mode       	#2f343a 		          #900000         	  #E4E4E4
  }

}

