background no
use_xft yes
xftfont Ubuntu Mono:size=8
xftalpha 0.1
update_interval 1
total_run_times 0
own_window 1 #no for i3wm compton / 1 for i3wm xcompmgr / yes for DE Gnome, XFCE
own_window_type override # override for i3wm, normal for GNOME, XFCE 
own_window_transparent yes
own_window_class conky
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 0
double_buffer yes
minimum_size 100 5
maximum_width 400
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color gray
default_shade_color red
default_outline_color green
alignment top_right

gap_x 5
gap_y 10

stippled_borders 0
border_inner_margin 0
border_width 0

no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
use_spacer left
text_buffer_size 256

own_window_color 000000
TEXT
${voffset 15}
${font Ubuntu:bold:size=20.5}${color #4a4a4a}BanditHijo-X260

${voffset -100}
${color #4a4a4a}
${font}
${font Ubuntu:bold:size=8}${color #4a4a4a}SYSTEM INFO ${color #4a4a4a} ${hr 1}
$font${color #4a4a4a}$sysname $kernel $alignr $machine
Intel CORE i5-6300 $alignr${freq_g cpu0}Ghz
Uptime $alignr${uptime}
File System $alignr${fs_type}

${font Ubuntu:bold:size=8}${color #4a4a4a}PROCESSORS ${color #4a4a4a} ${hr 1}
$font${color #4a4a4a}Thread1 ${cpu cpu1}% ${cpubar cpu1}
Thread2 ${cpu cpu2}% ${cpubar cpu2}
Thread3 ${cpu cpu3}% ${cpubar cpu3}
Thread4 ${cpu cpu4}% ${cpubar cpu4}
${cpugraph 20,195 #4a4a4a #4a4a4a}

# ${font Ubuntu:bold:size=8}${color #4a4a4a}TEMPERATURES ${color #4a4a4a}${hr 1}
# $font${color #4a4a4a}${color #4a4a4a}Temp1 Temp$alignr${hwmon 1 temp 1}Â°C 
${font Ubuntu:bold:size=8}${color #4a4a4a}MEMORY ${color #4a4a4a} ${hr 1}
$font${color #4a4a4a}MEM $alignc $mem / $memmax $alignr $memperc%
$membar

${color #4a4a4a}SWAP $alignc $swap / $swapmax $alignr $swapperc%
$swapbar

${font Ubuntu:bold:size=8}${color #4a4a4a}HDD ${color #4a4a4a}${hr 1}
$font${color #4a4a4a}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_free_perc /}%
${fs_bar /}
